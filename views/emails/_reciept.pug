style.
    section{
        width: 80%;
        margin: 0 auto;
    }
    h1{
        font-size: 1.8rem;
        margin-bottom: 2rem;
        text-align: center
    }
    .container{
        width: 80%;
        margin: 0 auto;
    }
    a{
        display:block;
        padding: 0.5rem;
        cursor: pointer;
        width: 7.8125rem;
        font-size: 0.725rem;
        color: black;
        border-radius: 100px;
        border: none;
        background-color: #ffffff;
        font-weight: 600;
    }

    .a:is(:hover, :active) {
        background-color: transparent;
        color: white;
    }